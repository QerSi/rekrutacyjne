  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,UData,
  Vcl.StdCtrls, Vcl.ExtCtrls, UZamowienia,Pozycja;

type
  TSzczegolyZamowienia = class(TForm)
    pnl1: TPanel;
    edtLogin: TEdit;
    lbl1: TLabel;
    lbl2: TLabel;
    edtImie: TEdit;
    lbl3: TLabel;
    edtNazwisko: TEdit;
    lbl4: TLabel;
    lbl5: TLabel;
    edtData: TEdit;
    dbgrd1: TDBGrid;
    lbl6: TLabel;
    lbl7: TLabel;
    edtStatus: TEdit;
    btnZmien: TButton;
    btnZapisz: TButton;
